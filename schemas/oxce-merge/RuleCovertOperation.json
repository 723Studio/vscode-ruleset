          "type": "integer"
        },
        "type": "object"
      },
      "bonusItems": {
        "additionalProperties": {
          "type": "integer"
        },
        "type": "object"
      },
      "bonusItemsEffect": {
        "type": "integer"
      },
      "allowAllEquipment": {
        "type": "boolean"
      },
      "removeRequiredItemsOnSuccess": {
        "type": "boolean"
      }, 
      "removeRequiredItemsOnFailure": {
        "type": "boolean"
      }, 
      "concealedItemsBonus": {
        "type": "integer"
      },
      "allowedArmor": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "armorEffect": {
        "type": "integer"
      },
