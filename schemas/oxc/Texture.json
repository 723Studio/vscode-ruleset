{
  "$id": "https://openxcom.org/Texture.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer"
    },
    "deployments": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "terrain": {
      "items": {
        "$ref": "#/definitions/TerrainCriteria"
      },
      "type": "array"
    }
  },
  "definitions": {
    "TerrainCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "weight": {
          "type": "integer"
        },
        "area": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4
        }
      }
    }
  }
}