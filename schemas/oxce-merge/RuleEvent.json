{
  "$id": "https://openxcom.org/schemas/oxce/RuleEvent.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "name" ] },
    { "required": [ "new" ] },
    { "required": [ "override" ] },
    { "required": [ "update" ] },
    { "required": [ "ignore" ] }
  ],
  "properties": {
    "new": { "type": "string" },
    "override": { "type": "string" },
    "update": { "type": "string" },
    "ignore": { "type": "string" },
    "refNode": {
      "$ref": "RuleEvent.json"
    },
    "adhocMissionScriptTags": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "alignBottom": {
      "type": "boolean"
    },
    "background": {
      "type": "string"
    },
    "music": {
      "type": "string"
    },
    "cutscene": {
      "type": "string"
    },
    "regionList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "city": {
      "type": "boolean"
    },
    "points": {
      "type": "integer"
    },
    "funds": {
      "type": "integer"
    },
    "loyalty": {
      "type": "integer"
    },
    "spawnedCraftType": {
      "type": "string"
    },
    "spawnedPersons": {
      "type": "integer"
    },
    "spawnedSoldier": {
      "type": "object"
    },
    "spawnedPersonType": {
      "type": "string"
    },
    "spawnedPersonName": {
      "type": "string"
    },
    "invert": {
      "type": "boolean"
    },
    "everyMultiItemList": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "everyMultiSoldierList": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "everyItemList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "randomMultiItemList": {
      "items": {
        "$ref": "WeightedOptions.json"
      },
      "type": "array"
    },
    "randomMultiSoldierList": {
      "items": {
        "$ref": "WeightedOptions.json"
      },
      "type": "array"
    },
    "randomItemList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "weightedItemList": {
      "$ref": "WeightedOptions.json"
    },
    "reputationScore": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "researchList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "interruptResearch": {
      "type": "string"
    },
    "decreaseCounter": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "increaseCounter": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "timer": {
      "type": "integer"
    },
    "counterValue": {
      "type": "integer"
    },
    "timerRandom": {
      "type": "integer"
    },
    "removedCovertOperationsList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "customAnswers": {
      "patternProperties": {
        "^\\d+$": {
          "properties": {
            "spawnEvents": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "weightedEvents": {
              "$ref": "WeightedOptions.json"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}