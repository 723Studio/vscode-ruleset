{
    "name": "ruleset-tools",
    "displayName": "OpenXcom Ruleset Tools",
    "description": "Validates YAML ruleset files for OpenXcom mods",
    "version": "0.1.1",
    "publisher": "openxcom",
    "bugs": "https://github.com/OpenXcom/vscode-ruleset/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenXcom/vscode-ruleset"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.31.0"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Linters",
        "Snippets",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:yaml"
    ],
    "keywords": [
        "openxcom",
        "ruleset",
        "yaml",
        "autocompletion",
        "validation"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "OpenXcom Ruleset",
            "properties": {
                "openxcom.ruleset.validator": {
                    "type": "string",
                    "enum": [
                        "oxc",
                        "oxce"
                    ],
                    "enumDescriptions": [
                        "OpenXcom",
                        "OpenXcom Extended"
                    ],
                    "default": "oxc",
                    "description": "Controls the version used for validating rulesets."
                }
            }
        },
        "languages": [
            {
                "id": "yaml",
                "extensions": [
                    ".rul",
                    ".nam"
                ],
                "filenamePatterns": [
                    "*Font.dat"
                ]
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "*.nam",
                "url": "./schemas/SoldierNamePool.json"
            },
            {
                "fileMatch": "*Font.dat",
                "url": "./schemas/Font.json"
            },
            {
                "fileMatch": "metadata.yml",
                "url": "./schemas/metadata.json"
            }
        ]
    },
    "extensionDependencies": [
        "redhat.vscode-yaml"
    ],
    "scripts": {
        "prepublishOnly": "node ./build/index.js",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.12.21",
        "json-merger": "^1.1.0",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode": "^1.1.28"
    }
}
