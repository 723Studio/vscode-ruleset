{
  "$merge": {
    "source": {
      "$import": "../oxc/RuleResearch.json"
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/RuleResearch.json",
      "oneOf": [
        { "$append": { "required": [ "new" ] } },
        { "$append": { "required": [ "override" ] } },
        { "$append": { "required": [ "update" ] } },
        { "$append": { "required": [ "ignore" ] } }
      ],
      "properties": {
        "new": { "type": "string" },
        "override": { "type": "string" },
        "update": { "type": "string" },
        "ignore": { "type": "string" },
        "refNode": {
          "$ref": "RuleResearch.json"
        },
        "repeatable": {
          "type": "boolean"
        },
        "neededItem": {
          "type": "string"
        },
        "spawnedItem": {
          "type": "string"
        },
        "spawnedItemCount": {
          "type": "integer"
        },
        "spawnedItemList": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "spawnedEvent": {
          "type": "string"
        },
        "randomEvents": {
          "$ref": "WeightedOptions.json"
        },
        "hidden": {
          "type": "boolean"
        },
        "stats": {
          "$ref": "UnitStats.json"
        },
        "funds": {
          "type": "integer"
        },
        "disables": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "reenables": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "decreaseCounter": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "increaseCounter": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "counterValue": {
          "type": "integer"
        },
        "requiresBaseFunc": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "eventWeights": {
          "$ref": "WeightedOptions.json#/definitions/Map"
        },
        "sequentialGetOneFree": {
          "type": "boolean"
        },
        "getOneFreeProtected": {
          "additionalProperties": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "type": "object"
        }
      }
    }
  }
}