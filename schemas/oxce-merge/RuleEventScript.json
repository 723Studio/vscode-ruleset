{
  "$id": "https://openxcom.org/schemas/oxce/RuleEventScript.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type"
  ],
  "properties": {
    "refNode": {
      "$ref": "RuleEventScript.json"
    },
    "type": {
      "type": "string"
    },
    "oneTimeSequentialEvents": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "oneTimeRandomEvents": {
      "$ref": "WeightedOptions.json"
    },
    "eventWeights": {
      "$ref": "WeightedOptions.json#/definitions/Map"
    },
    "firstMonth": {
      "type": "integer"
    },
    "lastMonth": {
      "type": "integer"
    },
    "executionOdds": {
      "type": "integer"
    },
    "minDifficulty": {
      "type": "integer"
    },
    "maxDifficulty": {
      "type": "integer"
    },
    "minScore": {
      "type": "integer"
    },
    "maxScore": {
      "type": "integer"
    },
    "minFunds": {
      "type": "integer"
    },
    "maxFunds": {
      "type": "integer"
    },
    "spawnGap": {
      "type": "integer"
    },
    "randomSpawnGap": {
      "type": "integer"
    },
    "allowedProcessor": {
      "type": "integer"
    },
    "missionMarkerName": {
      "type": "string"
    },
    "missionVarName": {
      "type": "string"
    },
    "counterMin": {
      "type": "integer"
    },
    "counterMax": {
      "type": "integer"
    },
    "missionMinRuns": {
      "deprecationMessage": "Deprecated: use \"counterMin\" instead"
    },
    "missionMaxRuns": {
      "deprecationMessage": "Deprecated: use \"counterMax\" instead"
    },
    "affectsGameProgression": {
      "type": "boolean"
    },
    "requiredReputation": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "itemTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "facilityTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "xcomBaseInRegionTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "xcomBaseInCountryTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "researchTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    }
  }
}