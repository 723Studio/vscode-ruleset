{
  "$id": "https://openxcom.org/ExtraSprites.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string"
    },
    "files": {
      "patternProperties": {
        "^-?\\d+$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "width": {
      "type": "integer"
    },
    "height": {
      "type": "integer"
    },
    "singleImage": {
      "type": "boolean"
    },
    "subX": {
      "type": "integer"
    },
    "subY": {
      "type": "integer"
    }
  }
}