{
  "$id": "https://openxcom.org/schemas/oxce/RuleEvent.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "background": {
      "type": "string"
    },
    "music": {
      "type": "string"
    },
    "regionList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "city": {
      "type": "boolean"
    },
    "points": {
      "type": "integer"
    },
    "funds": {
      "type": "integer"
    },
    "randomItem": {
      "deprecationMessage": "Deprecated: use \"everyItemList\" or \"randomItemList\" instead"
    },
    "itemList": {
      "deprecationMessage": "Deprecated: use \"everyItemList\" or \"randomItemList\" instead"
    },
    "everyMultiItemList": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "everyItemList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "randomItemList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "weightedItemList": {
      "$ref": "WeightedOptions.json"
    },
    "researchList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "interruptResearch": {
      "type": "string"
    },
    "timer": {
      "type": "integer"
    },
    "timerRandom": {
      "type": "integer"
    }
  }
}