{
  "$id": "https://openxcom.org/schemas/oxce/BattleScript.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type"
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "commands": {
      "items": {
        "$ref": "#/definitions/BattleScript"
      },
      "type": "array"
    }
  },
  "definitions": {
    "BattleScript": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "spawnUnit"
          ]
        },
        "conditionals": {
          "items": {
            "type": "integer"
          },
          "type": [
            "integer",
            "array"
          ]
        },
        "executionChances": {
          "type": "integer"
        },
        "executions": {
          "type": "integer"
        },
        "startTurn": {
          "type": "integer"
        },
        "endTurn": {
          "type": "integer"
        },
        "packSize": {
          "type": "integer"
        },
        "randomPackSize": {
          "type": "boolean"
        },
        "unitSide": {
          "type": "integer"
        },
        "unitSet": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "spawnBlocks": {
					"items": {
						"type": "string"
					},
					"type": "array"
				},
				"groups": {
					"items": {
						"type": "string"
					},
					"type": "integer"
				},
        "minDifficulty": {
          "type": "integer"
        },
        "maxDifficulty": {
          "type": "integer"
        },
        "label": {
          "type": "integer"
        }
      }
    }
  }
}