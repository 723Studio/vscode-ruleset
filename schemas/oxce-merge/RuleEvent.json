{
  "$id": "https://openxcom.org/schemas/oxce/RuleEvent.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "refNode": {
      "$ref": "RuleEvent.json"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "background": {
      "type": "string"
    },
    "music": {
      "type": "string"
    },
    "regionList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "city": {
      "type": "boolean"
    },
    "points": {
      "type": "integer"
    },
    "funds": {
      "type": "integer"
    },
    "spawnedPersons": {
      "type": "integer"
    },
    "spawnedSoldier": {
      "type": "object"
    },
    "spawnedPersonType": {
      "type": "string"
    },
    "spawnedPersonName": {
      "type": "string"
    },
    "randomItem": {
      "deprecationMessage": "Deprecated: use \"everyItemList\" or \"randomItemList\" instead"
    },
    "itemList": {
      "deprecationMessage": "Deprecated: use \"everyItemList\" or \"randomItemList\" instead"
    },
    "everyMultiItemList": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "everyItemList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "randomItemList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "weightedItemList": {
      "$ref": "WeightedOptions.json"
    },
    "reputationScore": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "researchList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "interruptResearch": {
      "type": "string"
    },
    "timer": {
      "type": "integer"
    },
    "timerRandom": {
      "type": "integer"
    },
    "removedCovertOperationsList": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "customAnswers": {
      "patternProperties": {
        "^\\d+$": {
          "properties": {
            "spawnEvent": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}