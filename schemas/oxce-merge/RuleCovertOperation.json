{
    "$id": "https://openxcom.org/schemas/oxc/RuleCovertOperation.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "name"
    ],
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "categories": {
        "items": {
          "type": "string",
          "enum": ["STR_INVESTIGATION", "STR_INFILTRATION", "STR_NEGOTIATION", "STR_DECEPTION", "STR_ENGINEERING", "STR_SCIENCE"]
        },
        "type": "array"
      },
      "soldiersMin": {
        "type": "integer"
      },
      "soldiersMax": {
        "type": "integer"
      },
      "successBackground": {
        "type": "string"
      },
      "failureBackground": {
        "type": "string"
      },
      "successDescription": {
        "type": "string"
      },
      "failureDescription": {
        "type": "string"
      },
      "successMusic": {
        "type": "string"
      },
      "failureMusic": {
        "type": "string"
      },
      "successEvent": {
        "type": "string"
      },
      "failureEvent": {
        "type": "string"
      },
      "progressEvent": {
        "$ref": "WeightedOptions.json"
      },
      "repeatProgressEvent": {
        "type": "boolean"
