      "trapChance": {
        "type": "integer"
      },
      "danger": {
        "type": "integer"
      },
      "successScore": {
        "type": "integer"
      },
      "failureScore": {
        "type": "integer"
      },
      "successLoyalty": {
        "type": "integer"
      },
      "failureLoyalty": {
        "type": "integer"
      },
      "successFunds": {
        "type": "integer"
      },
      "failureFunds": {
        "type": "integer"
      },
      "successItemsNames": {
        "items": {
          "$ref": "#/definitions/RandomProductionItem"
        },
        "type": "array"
      },
      "failureItemNames": {
        "items": {
          "$ref": "#/definitions/RandomProductionItem"
        },
        "type": "array"
      },
      "successResearchList": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "failureResearchList": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "successMissions": {
        "$ref": "WeightedOptions.json"
      },
      "failureMissions": {
        "$ref": "WeightedOptions.json"
      },
      "instantTrapDeployment": {
        "$ref": "WeightedOptions.json"
      },
      "instantSuccessDeployment": {
        "$ref": "WeightedOptions.json"
      },
      "requiredReputationLvl": {
        "additionalProperties": {
          "type": "integer"
        },
        "type": "object"
      },
      "successReputationScore": {
        "additionalProperties": {
          "type": "integer"
        },
        "type": "object"
      },
      "failureReputationScore": {
        "additionalProperties": {
          "type": "integer"
        },
        "type": "object"
