{
  "$id": "https://openxcom.org/schemas/oxce/RuleSoldierBonus.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "visibilityAtDark": {
      "type": "integer"
    },
    "stats": {
      "$ref": "UnitStats.json"
    },
    "listOrder": {
      "type": "integer"
    },
    "recovery": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "time": {
          "$ref": "RuleStatBonus.json"
        },
        "energy": {
          "$ref": "RuleStatBonus.json"
        },
        "morale": {
          "$ref": "RuleStatBonus.json"
        },
        "health": {
          "$ref": "RuleStatBonus.json"
        },
        "stun": {
          "$ref": "RuleStatBonus.json"
        },
        "mana": {
          "$ref": "RuleStatBonus.json"
        }
      }
    },
    "tags": {
      "type": "object"
    },
    "scripts": {
      "type": "object"
    }
  }
}
