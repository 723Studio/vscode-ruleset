          "items": {
            "$ref": "#/definitions/RandomProductionItem"
          },
          "type": "array"
        },
        "spawnedSoldier": {
          "type": "object"
        },
        "spawnedPersonType": {
          "type": "string"
        },
        "spawnedPersonName": {
          "type": "string"
        }
      },
      "definitions": {
        "RandomProductionItem": {
          "items": [
            {
              "type": "integer"
            },
            {
              "$ref": "WeightedOptions.json"
            }
          ],
          "minItems": 2,
          "maxItems": 2,
          "type": "array"
        }
      }
