{
  "$merge": {
    "source": {
      "$import": "../oxc/ruleset.json"
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/ruleset.json",
      "properties": {
        "extended": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tags": {
              "type": "object"
            },
            "scripts": {
              "type": "object"
            }
          }
        },
        "extraGlobeLabels": {
          "type": "array",
          "items": {
            "$ref": "RuleCountry.json"
          }
        },
        "itemCategories": {
          "type": "array",
          "items": {
            "$ref": "RuleItemCategory.json"
          }
        },
        "startingConditions": {
          "type": "array",
          "items": {
            "$ref": "RuleStartingCondition.json"
          }
        },
        "soldierTransformation": {
          "type": "array",
          "items": {
            "$ref": "RuleSoldierTransformation.json"
          }
        },
        "customPalettes": {
          "type": "array",
          "items": {
            "$ref": "CustomPalettes.json"
          }
        }
      }
    }
  }
}