{
  "$id": "https://openxcom.org/schemas/oxce/BattleScript.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type"
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "commands": {
      "items": {
        "$ref": "#/definitions/BattleScript"
      },
      "type": "array"
    }
  },
  "definitions": {
    "BattleScript": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "spawnUnit", "showMessage"
          ]
        },
        "conditionals": {
          "items": {
            "type": "integer"
          },
          "type": [
            "integer",
            "array"
          ]
        },
        "executionChances": {
          "type": "integer"
        },
        "executions": {
          "type": "integer"
        },
        "startTurn": {
          "type": "integer"
        },
        "endTurn": {
          "type": "integer"
        },
        "packSize": {
          "type": "integer"
        },
        "randomPackSize": {
          "type": "boolean"
        },
        "unitSide": {
          "type": "integer"
        },
        "unitSet": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "spawnBlocks": {
					"items": {
						"type": "string"
					},
					"type": "array"
				},
        "groups": {
          "items": {
            "type": "integer"
          },
          "type": [
            "integer",
            "array"
          ]
        },
        "minDifficulty": {
          "type": "integer"
        },
        "maxDifficulty": {
          "type": "integer"
        },
        "minAlarmLevel": {
          "type": "integer"
        },
        "maxAlarmLevel": {
          "type": "integer"
        },
        "label": {
          "type": "integer"
        },
        "messages": {
          "patternProperties": {
            "^\\d+$": {
              "properties": {
                "title": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                },
                "answer": {
                  "type": "string"
                },
                "background": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "type": "object"
            }
          },
          "additionalProperties": false,
          "type": "object"
        }
      }
    }
  }
}