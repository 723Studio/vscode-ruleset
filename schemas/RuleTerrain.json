{
  "$id": "https://openxcom.org/RuleTerrain.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "mapDataSets": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "mapBlocks": {
      "items": {
        "$ref": "MapBlock.json"
      },
      "type": "array"
    },
    "civilianTypes": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "music": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "depth": {
      "items": {
        "type": "integer"
      },
      "minItems": 2,
      "maxItems": 2,
      "type": "array"
    },
    "ambience": {
      "type": "integer"
    },
    "ambientVolume": {
      "type": "number"
    },
    "script": {
      "type": "string"
    }
  }
}