{
  "$id": "https://openxcom.org/schemas/oxce/RuleEventScript.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type"
  ],
  "properties": {
    "refNode": {
      "$ref": "RuleEventScript.json"
    },
    "type": {
      "type": "string"
    },
    "oneTimeSequentialEvents": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "oneTimeRandomEvents": {
      "$ref": "WeightedOptions.json"
    },
    "eventWeights": {
      "$ref": "WeightedOptions.json#/definitions/Map"
    },
    "firstMonth": {
      "type": "integer"
    },
    "lastMonth": {
      "type": "integer"
    },
    "executionOdds": {
      "type": "integer"
    },
    "minDifficulty": {
      "type": "integer"
    },
    "maxDifficulty": {
      "type": "integer"
    },
    "minScore": {
      "type": "integer"
    },
    "maxScore": {
      "type": "integer"
    },
    "minFunds": {
      "type": "integer"
    },
    "maxFunds": {
      "type": "integer"
    },
    "spawnGap": {
      "type": "integer"
    },
    "randomSpawnGap": {
      "type": "integer"
    },
    "affectsGameProgression": {
      "type": "boolean"
    },
    "itemTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "facilityTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "researchTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    }
  }
}