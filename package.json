{
    "name": "ruleset-tools",
    "displayName": "OpenXcom Ruleset Tools",
    "description": "Validates YAML ruleset files for OpenXcom mods",
    "version": "0.0.1",
    "publisher": "openxcom",
    "bugs": "https://github.com/OpenXcom/vscode-ruleset/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenXcom/vscode-ruleset"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.26.0"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Linters",
        "Snippets",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:yaml"
    ],
    "keywords": [
        "openxcom",
        "ruleset",
        "yaml",
        "autocompletion",
        "validation"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "yaml",
                "extensions": [
                    ".rul"
                ]
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "*.rul",
                "url": "./schemas/ruleset.json"
            },
            {
                "fileMatch": "metadata.yml",
                "url": "./schemas/metadata.json"
            }
        ]
    },
    "extensionDependencies": [
        "redhat.vscode-yaml"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}